    meta name="msapplication-TileColor" content="#ffffff"
    meta name="msapplication-TileImage" content="/img/fav/ms-icon-144x144.png"
    meta name="theme-color" content="#ffffff<em></em>"

    / jQuery
    link href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" media="screen, projection" rel="stylesheet"
    script src="http://code.jquery.com/jquery-1.8.2.min.js"
    script src="http://code.jquery.com/ui/1.12.1/jquery-ui.js"

    / JS
    script src="js/lib/utils.js"
    script src="js/lib/ajax.js"
    script src="js/lib/issue.js"
    script src="js/lib/factory.js"
    script src="js/lib/array.js"
    script src="js/lib/filter.js"
    script src="js/lib/quick_filter.js"
    script src="js/lib/session.js"
    script src="js/lib/message.js"
    script src="js/controller/dialog_controller.js"
    script src="js/controller/page_controller.js"

  body onload="controller = new #{@controller}(); controller.start();"
    == slim :header

    .flex-container
      #column-left class='flex-item side left'
      #column-middle class='flex-item middle'
        == styled_flash
        == yield
      #column-right class='flex-item side right'

    == slim :footer

    #overlay
    #modal
      #dialog
        .header
          h1 New Issue
        form method="post"
          fieldset
            .key-value-container
              div class="keys-inline" Project
                span class="font-red" title="This property is required" *
              .inline-block
                #project class="dropdown"
                  .dropdown-selection
                  .dropdown-content
            .key-value-container
              .keys-inline Type
                span class="font-red" title="This property is required" *
              .inline-block
                #type class="dropdown"
                  .dropdown-selection
                  .dropdown-content
          .seperator
          fieldset
            .key-value-container
              label class="keys-float" for="name">Name
                span class="font-red" title="This property is required" *
              .value-width
                input type= "text" id= "name" name= "name" accesskey= "n" value= "" title= "Enter the issue name" maxlength= "50"
            .key-value-container
              label class="keys-float" for="description" Description
                span class="font-red" title="This property is required" *
              .value-width
                textarea id="description" name="description" accesskey="d" maxlength="2000"
            .submit-buttons
              button id="new-issue" class="button" type="button" submit
              button class="button" type="reset" reset